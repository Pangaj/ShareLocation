<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_splash_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_120"
        android:src="@drawable/ic_app_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/iv_splash_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_20"
        android:text="@string/share_my_location"
        android:textSize="@dimen/font_20"
        android:textStyle="bold|italic"
        android:textColor="@color/accent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_created"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/created_with_love"
        android:textSize="@dimen/font_16"
        android:layout_marginBottom="@dimen/spacing_50"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:visibility="gone"
        android:textColor="@color/primary"
        android:layout_height="wrap_content" />
</RelativeLayout>